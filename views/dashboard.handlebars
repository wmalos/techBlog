<div>
  <a href="/dashboard/createPost/"><button
      id="createPost"
      class="button is-primary is-pulled-right"
    >Create new post</button></a>
  {{#if posts.length}}
    <div class="col-md-6 post-list">

      {{#each posts as |post|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a href="/post/{{post.post_id}}">{{post.post_title}}</a></h4>
          </div>
          <div class="col-md-4">
            <button
              class="btn btn-sm btn-danger"
              data-id="{{post.post_id}}"
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>